# ============================================
# NFT Ticketing Platform - Backend Configuration
# ============================================

# ============================================
# Database Configuration
# ============================================

# MongoDB Connection URL
MONGO_URL="mongodb://localhost:27017"

# Database Name
DB_NAME="nft_ticketing"

# ============================================
# Server Configuration
# ============================================

# Server Port
PORT=5000

# CORS Origins (comma-separated or wildcard)
CORS_ORIGINS="*"

# ============================================
# Supabase Configuration
# ============================================

# Your Supabase Project URL
# Found in: Supabase Dashboard > Project Settings > API > Project URL
SUPABASE_URL="https://your-project-ref.supabase.co"

# Your Supabase Service Role Key (Backend Only)
# Found in: Supabase Dashboard > Project Settings > API > service_role secret
# WARNING: Keep this secret! Never commit to git or expose publicly!
SUPABASE_KEY="your-service-role-key-here"

# Your Supabase Anon/Publishable Key (Optional - for reference)
# Found in: Supabase Dashboard > Project Settings > API > anon public
# This is safe to use in frontend
SUPABASE_PUBLISHABLE_KEY="your-anon-key-here"

# ============================================
# Blockchain Configuration (Optional)
# ============================================

# Web3 Provider URL (e.g., Infura, Alchemy)
# WEB3_PROVIDER_URL="https://mainnet.infura.io/v3/YOUR_PROJECT_ID"

# Smart Contract Addresses
# TICKET_CONTRACT_ADDRESS="0x..."
# MARKETPLACE_CONTRACT_ADDRESS="0x..."

# ============================================
# Authentication Configuration (Optional)
# ============================================

# JWT Secret for token signing
# JWT_SECRET="your-jwt-secret-key-here"

# Token Expiration Time
# JWT_EXPIRATION="24h"

# ============================================
# Email Configuration (Optional)
# ============================================

# SMTP Server Configuration
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM="noreply@nft-ticketing.com"

# ============================================
# Logging Configuration (Optional)
# ============================================

# Log Level (debug, info, warn, error)
# LOG_LEVEL="info"

# ============================================
# Environment
# ============================================

# Environment (development, staging, production)
NODE_ENV="development"
