{
  "name": "nft-ticketing-platform",
  "version": "1.0.0",
  "private": true,
  "description": "NFT Ticketing Platform - Full Stack Application",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "dev:admin": "cd frontend && npm run dev:admin",
    "build": "cd frontend && npm run build",
    "build:perf": "cd frontend && npm run build:perf",
    "build:admin": "cd frontend && npm run build:admin",
    "build:analyze": "cd frontend && npm run build:analyze",
    "preview": "cd frontend && npm run preview",
    "preview:admin": "cd frontend && npm run preview:admin",
    "backend:dev": "cd backend && python -m uvicorn main:app --reload --port 8000",
    "backend:start": "cd backend && ./start_backend.sh",
    "test": "cd frontend && npm run test",
    "test:e2e": "cd frontend && npm run e2e",
    "perf:baseline": "cd frontend && npm run perf:baseline",
    "perf:lighthouse": "cd frontend && npm run perf:lighthouse",
    "install:all": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt"
  },
  "workspaces": [],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

